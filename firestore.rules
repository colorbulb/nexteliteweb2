rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read for everyone (public content)
    match /{document=**} {
      allow read: if true;
    }
    
    // Allow write for authenticated users only
    match /courses/{courseId} {
      allow write: if request.auth != null;
    }
    
    match /blogPosts/{postId} {
      allow write: if request.auth != null;
    }
    
    match /team/{memberId} {
      allow write: if request.auth != null;
    }
    
    match /testimonials/{testimonialId} {
      allow write: if request.auth != null;
    }
    
    match /settings/{settingId} {
      allow write: if request.auth != null;
    }
    
    match /pageContent/{contentId} {
      allow write: if request.auth != null;
    }
    
    match /socialFeed/{feedId} {
      allow write: if request.auth != null;
    }
    
    match /leads/{leadId} {
      allow create: if true; // Anyone can submit leads
      allow read, update, delete: if request.auth != null;
    }
    
    // Allow management collections (categories, instructors, levels)
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /instructors/{instructorId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /levels/{levelId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}

