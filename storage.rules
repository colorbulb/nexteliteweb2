rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Public images folder - everyone can read, authenticated users can write
    match /images/{imageId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Announcement images - public read, authenticated write
    match /announcements/{announcementId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Course images - public read, authenticated write
    match /courses/{courseId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Blog images - public read, authenticated write
    match /blog/{postId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Team member images - public read, authenticated write
    match /team/{memberId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Default: deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

